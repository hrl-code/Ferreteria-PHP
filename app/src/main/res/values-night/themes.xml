<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FerreteriaPHP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">#1A1A1A</item>
        <item name="colorOnPrimaryContainer">@color/primary_container</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondary">#1A1A1A</item>
        <item name="colorOnSecondaryContainer">@color/secondary_container</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/tertiary_light</item>
        <item name="colorTertiaryContainer">@color/tertiary_dark</item>
        <item name="colorOnTertiary">#1A1A1A</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_container</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorSurfaceVariant">#2C2C2C</item>
        <item name="colorOnBackground">#E1E1E1</item>
        <item name="colorOnSurface">#E1E1E1</item>
        <item name="colorOnSurfaceVariant">#CAC4D0</item>

        <!-- Error Colors -->
        <item name="colorError">#FF6B6B</item>
        <item name="colorErrorContainer">#93000A</item>
        <item name="colorOnError">#690005</item>
        <item name="colorOnErrorContainer">#FFDAD6</item>

        <!-- Outline -->
        <item name="colorOutline">#938F99</item>
        <item name="colorOutlineVariant">#49454F</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">#1E1E1E</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Material Components -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/primary_light</item>
    </style>
</resources>